<div class="col contact-section" id="contact-section">
  <div class="row pt-5">
    <div class="col-12 d-flex justify-content-center">
      <h1 class="contact-heading">Contact</h1>
    </div>
  </div>
  <div class="row pt-5 pb-5 pl-5 pr-5">
    <div class="col text-center">
      <div class="row">

          <div class="col-12 col-md-6 pr-md-5 border-right">
            <%= bootstrap_form_for(@submission, url: submission_submit_path) do |f| %>
              <%= f.text_field :name, placeholder: "Enter name" %>
              <%= f.email_field :email, placeholder: "Enter email address" %>
              <%= f.telephone_field :phone, placeholder: "Enter phone number" %>
          </div>
          <div class="col-12 col-md-6 pl-md-5">
              <%= f.text_area :message, placeholder: "Get in touch :)" %>
              <%= f.submit "Send", class: 'btn-pink btn' %>
            <% end %>
          </div>

      </div>
    </div>
  </div>
</div>
